[user]
	name = Nick
	email = nickknw@gmail.com
[core]
	autocrlf = true
	safecrlf = false
	editor = gvim --nofork 
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
	lg = log --graph --pretty=format:'%C(yellow)%h%Creset -%Cred%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        unstage = reset HEAD
[gui]
	recentrepo = C:/Documents and Settings/nknowlson/My Documents/qapp
